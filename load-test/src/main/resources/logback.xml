<configuration>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- For debugging, set the logger for Gatling HTTP to DEBUG -->
    <logger name="io.gatling.http" level="WARN"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %logger{15} - %msg%n%ex{5}</pattern>
        </encoder>
    </appender>

</configuration>
